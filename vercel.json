{
  "buildCommand": "npm run build:static",
  "outputDirectory": "dist",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    { "source": "/materialen", "destination": "/catalogus", "permanent": true },
    { "source": "/:path*", "has": [{ "type": "host", "value": "www.renovawrap.nl" }], "destination": "https://renovawrap.nl/:path*", "permanent": true }
  ],
  "rewrites": [
    { "source": "/((?!favicon\\.ico|favicon-.*\\.png|apple-touch-icon\\.png|site\\.webmanifest|robots\\.txt|sitemap\\.xml|og-image\\.png|assets/|project-fotos/).*)", "destination": "/index" }
  ],
  "headers": [
    { "source": "/(.*)", "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }, { "key": "X-Frame-Options", "value": "DENY" }] },
    { "source": "/assets/(.*)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] },
    { "source": "/(favicon\\.ico|favicon-.*\\.png|apple-touch-icon\\.png|site\\.webmanifest)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=86400" }] }
  ]
}
